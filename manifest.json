{
  "manifest_version": 2,
  "name": "Stream with Me",
  "description": "Watch anime on Crunchyroll with your friends!",
  "version": "0.0.1",
  "icons": {
    "128": "assetts/images/logo/popcorn-128.png",
    "48": "assetts/images/logo/popcorn-48.png"
  },
  "permissions": [
    "activeTab", "webRequest", "*://*.crunchyroll.com/*/*", "tabs", "webNavigation"
  ],
  "content_scripts": [
    {
      "matches": [ "*://static.crunchyroll.com/*/*" ],
      "all_frames": true,
      "js": [
        "assetts/scripts/video.js"]
        ,
      "run_at": "document_idle"
    }, {
      "matches": [ "*://crunchyroll.com/*/*", "*://www.crunchyroll.com/*/*" ],
      "all_frames": true,
      "js": [
        "assetts/scripts/socket.io.js",
        "assetts/scripts/content.js"]
        ,
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": [
      "assetts/scripts/socket.io.js",
      "assetts/scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "assetts/images/logo/popcorn-16.png",
    "default_popup": "popup.html"
  },
  "externally_connectable": {
    "matches": [
      "*://*.crunchyroll.com/*/*"
    ]
  },
  "web_accessible_resources": [
    "assetts/scripts/socket.io.js"
  ]
}